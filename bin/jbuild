(jbuild_version 1)

(rule
 ((targets (version.ml))
  (deps    (../VERSION))
  (action  (with-stdout-to ${@} (bash "cat ${<} | sed s/^/\"let version = \"\\\"/ | sed s/$/\\\"/")))
 )
)

(executables
 ((names (xcp_featured))
  (flags (:standard -safe-string))
  (libraries (systemd
              xapi-types
              xapi-idl.v6)
  )
 )
)

(install
 ((section bin)
  (files ((xcp_featured.exe as v6d)))
 )
)

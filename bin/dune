(rule
 (targets version.ml)
 (deps
  (:version ../VERSION))
 (action
  (with-stdout-to
   %{targets}
   (bash "cat %{version} | sed s/^/\"let version = \"\\\"/ | sed s/$/\\\"/"))))

(executables
 (modes byte exe)
 (names xcp_featured)
 (flags :standard -safe-string)
 (libraries xapi-types xapi-idl.v6)
 (preprocess
  (per_module
   ((pps ppx_deriving.enum)
    V6_server))))

(install
 (section bin)
 (files
  (xcp_featured.exe as v6d)))
